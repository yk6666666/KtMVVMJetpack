<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CbgBase" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorControlNormal">@color/colorControlNormal</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="colorAccent">@color/text_main_red_color</item>
        <!--去除水波纹-->
        <item name="android:selectableItemBackground">@android:color/transparent</item>
        <item name="android:selectableItemBackgroundBorderless">@android:color/transparent</item>
        <!--        <item name="android:colorControlHighlight">@android:color/transparent</item>-->
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <style name="Theme.CbgBase.NoAnim" parent="Theme.CbgBase">
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="Theme.CbgBase.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CbgBase.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CbgBase.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>