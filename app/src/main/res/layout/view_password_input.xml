<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/pwd_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/pwdTv1"
            style="@style/pwdInputStyle"
            android:layout_marginLeft="0dp" />

        <TextView
            android:id="@+id/pwdTv2"
            style="@style/pwdInputStyle" />

        <TextView
            android:id="@+id/pwdTv3"
            style="@style/pwdInputStyle" />

        <TextView
            android:id="@+id/pwdTv4"
            style="@style/pwdInputStyle" />

        <TextView
            android:id="@+id/pwdTv5"
            style="@style/pwdInputStyle" />

        <TextView
            android:id="@+id/pwdTv6"
            style="@style/pwdInputStyle" />
    </LinearLayout>

    <EditText
        android:id="@+id/edt_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:cursorVisible="false"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:textColor="@color/transparent"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/pwd_lay"
        app:layout_constraintEnd_toEndOf="@+id/pwd_lay"
        app:layout_constraintStart_toStartOf="@+id/pwd_lay"
        app:layout_constraintTop_toTopOf="@+id/pwd_lay"></EditText>
</androidx.constraintlayout.widget.ConstraintLayout>