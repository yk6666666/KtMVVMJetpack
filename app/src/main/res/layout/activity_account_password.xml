<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.AccountPasswordActivity">

    <com.ruffian.library.widget.RConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <com.ruffian.library.widget.RTextView
            android:id="@+id/etPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名:"
            android:textSize="@dimen/sp_12"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            />

        <EditText
            android:id="@+id/etPhoneEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入手机号/用户名"
            android:maxLength="11"
            android:textColorHint="#ff999999"
            android:textSize="@dimen/sp_12"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            android:paddingStart="@dimen/dp_16"
            app:layout_constraintStart_toEndOf="@id/etPhone"/>

        <com.ruffian.library.widget.RTextView
            android:id="@+id/etPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密   码:"
            android:textSize="@dimen/sp_12"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            app:layout_constraintTop_toBottomOf="@id/etPhone"
            />

        <EditText
            android:id="@+id/etPasswordEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入密码"
            android:textColorHint="#ff999999"
            android:textSize="@dimen/sp_12"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            android:paddingStart="@dimen/dp_16"
            app:layout_constraintStart_toStartOf="@id/etPhoneEdit"
            app:layout_constraintTop_toBottomOf="@id/etPhoneEdit"
            app:layout_constraintStart_toEndOf="@id/etPhone"/>

        <com.ruffian.library.widget.RTextView
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="6dp"
            android:paddingStart="@dimen/dp_66"
            android:paddingEnd="@dimen/dp_66"
            android:text="登陆"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="16sp"
            app:background_normal="#FF4D49"
            android:layout_marginTop="@dimen/dp_36"
            app:background_pressed="@color/colorPrimary_press"
            app:background_unable="#DDDDDD"
            app:corner_radius="23dp"
            app:enabled="true"
            app:layout_constraintTop_toBottomOf="@+id/etPasswordEdit"
            app:text_color_normal="@color/color_while"
            app:text_color_unable="@color/grey_969698" />

    </com.ruffian.library.widget.RConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>