<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/pwd_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.dream.xiaobei.app.verificationInput.InputLineView
            android:id="@+id/pwdTv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.dream.xiaobei.app.verificationInput.InputLineView
            android:id="@+id/pwdTv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            />

        <com.dream.xiaobei.app.verificationInput.InputLineView
            android:id="@+id/pwdTv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            />

        <com.dream.xiaobei.app.verificationInput.InputLineView
            android:id="@+id/pwdTv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/edt_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:cursorVisible="false"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:inputType="phone"
        android:maxLength="4"
        android:textColor="@color/transparent"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/pwd_lay"
        app:layout_constraintEnd_toEndOf="@+id/pwd_lay"
        app:layout_constraintStart_toStartOf="@+id/pwd_lay"
        app:layout_constraintTop_toTopOf="@+id/pwd_lay"/>
</androidx.constraintlayout.widget.ConstraintLayout>