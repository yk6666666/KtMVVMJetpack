    <declare-styleable name="NumberProgressBar">
        <attr name="progress_current" format="integer" />
        <attr name="progress_max" format="integer" />

        <attr name="progress_unreached_color" format="color" />
        <attr name="progress_reached_color" format="color" />

        <attr name="progress_reached_bar_height" format="dimension" />
        <attr name="progress_unreached_bar_height" format="dimension" />

        <attr name="progress_text_size" format="dimension" />
        <attr name="progress_text_color" format="color" />

        <attr name="progress_text_offset" format="dimension" />

        <attr name="progress_unreached_bar_visibility" format="boolean" />
        <attr name="progress_current_visibility" format="boolean" />
        <attr name="progress_text_visibility" format="boolean" />

    </declare-styleable>

    <style name="myDialog" parent="@android:style/Theme.Holo.Dialog">
        <!-- 是否有边框 -->
        <item name="android:windowFrame">@null</item>
        <!--是否在悬浮Activity之上  -->
        <item name="android:windowIsFloating">true</item>
        <!-- 标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--阴影  -->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 还可以加入一些弹出和退出的动画 (lan)-->
    </style>

    <style name="noShadowDialog" parent="@android:style/Theme.Holo.Dialog">
        <!-- 是否有边框 -->
        <item name="android:windowFrame">@null</item>
        <!--是否在悬浮Activity之上  -->
        <item name="android:windowIsFloating">true</item>
        <!-- 标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--阴影  -->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 还可以加入一些弹出和退出的动画 (lan)-->
    </style>

    <style name="TabText" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
    </style>

    <declare-styleable name="ConsecutiveScrollerLayout">
        <attr name="isPermanent" format="boolean" />
        <attr name="stickyOffset" format="dimension" />
        <attr name="autoAdjustHeightAtBottomView" format="boolean" />
        <attr name="adjustHeightOffset" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ConsecutiveScrollerLayout_Layout">
        <attr name="layout_isConsecutive" format="boolean" />
        <attr name="layout_isNestedScroll" format="boolean" />
        <attr name="layout_isSticky" format="boolean" />
        <attr name="layout_isTriggerScroll" format="boolean" />
        <attr name="layout_isSink" format="boolean" />
        <attr name="layout_align" format="enum">
            <enum name="LEFT" value="1" />
            <enum name="RIGHT" value="2" />
            <enum name="CENTER" value="3" />
        </attr>
        <attr name="layout_scrollChild" format="reference" />
    </declare-styleable>


    <style name="th_date_selector_dialog_wheel">
        <item name="wheel_atmospheric">true</item>
        <item name="wheel_curved">true</item>
        <item name="wheel_cyclic">false</item>
        <item name="wheel_indicator">true</item>
        <item name="wheel_indicator_color">@color/split_line</item>
        <item name="wheel_indicator_size">1dp</item>
        <item name="wheel_indicator_space">55dp</item>
        <item name="wheel_item_space">40dp</item>
        <item name="wheel_item_text_color">#4D333333</item>
        <item name="wheel_item_text_size">18sp</item>
        <item name="wheel_selected_item_text_color">@color/text_color_black</item>
        <item name="wheel_visible_item_count">5</item>
    </style>

    <style name="th_dialog_line_bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@color/th_color_line_dialog_bottom</item>
    </style>

    <style name="th_date_selector_dialog_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:background">@drawable/ripple_white</item>
    </style>

    <style name="th_dialog_bottom_out_in">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_from_bottom</item>
    </style>

    <!--选择器弹窗边距-->
    <dimen name="th_selector_dialog_padding_start">8dp</dimen>
    <dimen name="th_selector_dialog_padding_end">8dp</dimen>
    <dimen name="th_selector_dialog_padding_bottom">24dp</dimen>
    <dimen name="th_selector_dialog_max_height_ratio">0.6</dimen>


    <style name="th_base_dialog">
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">#00000000</item><!--透明背景，防止显示某些透明的View时，底色是白色的-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/th_dialog_bottom_out_in</item>
    </style>

</resources>